<%= render partial: 'partials/project_menu' %>

<div class="container">
  <div class="columns">
    <div class="column col-9">
      <div class="card">
        <div class="card-header">
          <%= link_to new_task_path(@project.slug), class: 'btn btn-default' do %>
            <i class="fa fa-plus"></i>
            New task
          <% end %>
        </div>

        <div class="card-body">
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Start</th>
                <th>End</th>
                <th>Assigned to</th>
              </tr>
            </thead>
            <tbody>
              <% for task in @tasks %>
                <tr>
                  <td><%= link_to task.name, task_path(@project.slug, task.id) %></td>
                  <td><%= l task.start_date, format: :short %></td>
                  <td><%= l task.end_date, format: :short %></td>
                  <td><%= link_to task.assigned.username, user_path(task.assigned.username) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="column col-3">
      <ul class="menu">
        <li class="divider" data-content="Filters"></li>
        <li class="menu-item">
          <a href="#">
            <i class="icon icon-link"></i> Assigned to me
          </a>
        </li>
        <li class="menu-item">
          <a href="#">
            <i class="icon icon-link"></i> Opened
          </a>
        </li>
        <li class="menu-item">
          <a href="#">
            <i class="icon icon-link"></i> Closed
          </a>
        </li>
      </ul>
    </div>
  </div>
</div>
