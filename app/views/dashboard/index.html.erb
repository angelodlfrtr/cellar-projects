<div class="container">
  <div class="columns">
    <div class="column col-8 col-xl-7 col-md-12 col-sm-12 col-xs-12">
      <div class="card">
        <div class="card-header">
          <h2 class="card-title">Timeline</h2>
          <div class="card-subtitle">All projects</div>
        </div>

        <div class="card-body">
          <%= render partial: 'partials/timeline', locals: { events: current_user.internal_events } %>
        </div>
      </div>
    </div>

    <div class="column col-4 col-xl-5 col-md-12 col-sm-12 col-xs-12">
      <div class="card">
        <div class="card-header">
          <%= link_to new_project_path, class: 'btn btn-primary float-right' do %>
            <i class="fa fa-plus"></i>
            New project
          <% end %>

          <h2 class="card-title">Projects (<%= current_user.projects.count %>)</h2>
          <div class="card-subtitle">Your projects</div>
        </div>

        <div class="card-body">
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Deadline</th>
              </tr>
              <% for project in @projects %>
                <tr>
                  <td><%= link_to project.name, project_path(project.slug) %></td>
                  <td><%= l project.deadline %></td>
                </tr>
              <% end %>
            </thead>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
