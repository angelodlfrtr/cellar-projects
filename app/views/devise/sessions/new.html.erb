<div id="new_session">
  <div class="container">
    <div class="columns">
      <div class="column col-4"></div>
      <div class="column col-4">
        <div class="card">
          <div class="card-header">
            <h4 class="card-title">Connexion</h4>
          </div>

          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <div class="form-group">
                <%= f.label :login, class: 'form-label' %><br />
                <%= f.text_field :login, autofocus: true, class: 'form-input' %>
              </div>

              <div class="form-group">
                <%= f.label :password, 'Mot de passe', class: 'form-label' %><br />
                <%= f.password_field :password, autocomplete: 'off', class: 'form-input' %>
              </div>

              <% if devise_mapping.rememberable? -%>
                <div class="form-group">
                  <label class="form-switch">
                    <%= f.check_box :remember_me %>
                    <i class="form-icon"></i> Se souvenir de moi
                  </label>
                </div>
              <% end -%>

              <div class="form-group">
                <%= f.submit "Connexion", class: 'btn btn-primary' %>
              </div>
            <% end %>
          </div>

          <div class="card-footer">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
