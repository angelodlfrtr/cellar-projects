<div id="new_registration">
  <div class="container">
    <div class="columns">
      <div class="column col-4"></div>
      <div class="column col-4">
        <div class="card">
          <div class="card-header">
            <h4 class="card-title">Inscritpion</h4>
          </div>

          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-group">
                <%= f.label :email, class: 'form-label' %>
                <%= f.email_field :email, autofocus: true, class: 'form-input' %>
              </div>

              <div class="form-group">
                <%= f.label :username, 'Login', class: 'form-label' %>
                <%= f.text_field :username, autofocus: true, class: 'form-input' %>
              </div>

              <div class="columns">
                <div class="column col-6">
                  <div class="form-group">
                    <%= f.label :first_name, 'Prénom', class: 'form-label' %>
                    <%= f.text_field :first_name, autofocus: true, class: 'form-input' %>
                  </div>
                </div>
                <div class="column col-6">
                  <div class="form-group">
                    <%= f.label :last_name, 'Nom', class: 'form-label' %>
                    <%= f.text_field :last_name, autofocus: true, class: 'form-input' %>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :password, 'Mot de passe', class: 'form-label' %>
                <%= f.password_field :password, autocomplete: "off", class: 'form-input' %>
                <% if @minimum_password_length %>
                  <small>(<%= @minimum_password_length %> caractères minimum)</small>
                <% end %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, 'Confirmation du mot de passe', class: 'form-label' %>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-input' %>
              </div>

              <div class="form-group">
                <%= f.submit "Inscription", class: 'btn btn-primary' %>
              </div>
            <% end %>
          </div>

          <div class="card-footer">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
